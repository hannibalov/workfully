{
  "name": "board",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "backend:dev": "dotenv -e .env -- node -r dotenv/config ./dist/app/backend/koaServer.js",
    "backend:test": "dotenv -e .env.test -- node -r dotenv/config ./dist/app/backend/koaServer.js",
    "frontend:dev": "next dev",
    "frontend:test": "dotenv -e .env.test -- next dev -p 3002",
    "dev": "concurrently \"yarn backend:dev\" \"yarn frontend:dev\"",
    "build": "tsc",
    "start": "next start",
    "lint": "next lint",
    "test:watch": "jest --watch",
    "test": "concurrently \"dotenv -e .env.test -- node -r dotenv/config ./dist/app/backend/koaServer.js\" \"jest --watch\"",
    "migrate:dev": "dotenv -e .env -- npx prisma migrate dev",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate dev",
    "playwright": "dotenv -e .env.test -- playwright test"
  },
  "dependencies": {
    "@babel/preset-env": "^7.25.7",
    "@babel/preset-react": "^7.25.7",
    "@babel/preset-typescript": "^7.25.7",
    "@prisma/client": "^5.20.0",
    "@tanstack/react-query": "^5.59.3",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "koa-router": "^13.0.1",
    "next": "14.2.14",
    "pg": "^8.13.0",
    "prisma": "^5.20.0",
    "react": "^18",
    "react-dom": "^18",
    "react-error-boundary": "^4.0.13",
    "start-server-and-test": "^2.0.8",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/jest": "^29.5.13",
    "@types/koa": "^2.15.0",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.14",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
