{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"]
    },
    "allowJs": false, // Disable if you only want TypeScript
    "noEmit": false, // Set to false to emit compiled files
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["app/**/*.ts", ".next/types/**/*.ts", "app/frontend/**/*.tsx"],
  "exclude": ["node_modules"]
}
